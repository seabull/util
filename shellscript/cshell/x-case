#!/usr/bin/awk -f
#------------------------------------------------------------------------------
#
{
  for ( i = 1 ; i <= length($0) ; i++ )
  {
    c = substr($0,i,1) ;
    u = toupper(c) ;
    l = tolower(c) ;

    if ( l == u )
    {
      printf "%s",c;
    } else {
      printf "[%s%s]", u, l ;
    }
  }
  printf "\n" ;
}
#
#------------------------------------------------------------------------------
