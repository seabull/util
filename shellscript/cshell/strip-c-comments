#!/usr/local/bin/perl
undef $/ ;
$_ = join ( '',<>) ;
s{
  (
    [^"'/]+
   |
    (?:"[^"\\]*(?:\\.[^"\\]*)*" [^"'/]*)+
   |
    (?:'[^'\\]*(?:\\.[^'\\]*)*' [^"'/]*)+
  )
 |
  / (?:
        \*[^*]*\*+(?:[^/*][^*]*\*+)*/
      |
        /[^\n]*
     )
}{$1}gsx ;
print ;
