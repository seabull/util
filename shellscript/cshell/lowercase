#!/bin/csh -f
#------------------------------------------------------------------------------

  if ( $#argv < 1 ) then
    echo ""
    echo "error:  No files specified"
    echo ""
    echo "usage:  lowercase <file-name> [...]"
    echo ""
    exit -1
  endif

#------------------------------------------------------------------------------

  foreach x ( $* )
    set new = "` echo $x | tr 'A-Z' 'a-z' `"
    if ( "$x" != "$new" ) mv "$x" "$new"
  end

#------------------------------------------------------------------------------
